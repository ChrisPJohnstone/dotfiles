[user]
    name = Christopher Johnstone
[core]
    pager = delta
    autocrlf = input
    excludesfile = /Users/christopherjohnstone/.gitignore_global
[init]
    defaultBranch = main
[push]
    default = current
    autoSetupRemote = true
    ; recurseSubmodules = on-demand
[pull]
    rebase = true
[submodule]
    recurse = true
[log]
    date = format:%Y:%m:%d %H:%M:%S %z
[status]
    relativePaths = false
    short = true
    branch = true # Show remote tracking info
[format]
    pretty = %C(green)%cd %C(yellow)%h %C(blue)%><(30)%an %C(reset)%s %C(red)%d
[merge]
    tool = nvimdiff
    conflictstyle = zdiff3
[mergetool]
    prompt = true
    keepBackup = false
[mergetool "nvimdiff"]
    layout = "LOCAL,BASE,REMOTE / MERGED"
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
[alias]
    edit = !$EDITOR $(git ls-files -o -m --exclude-standard)
    newbranch = !git checkout develop && git pull && git checkout -b $1
    update = !git pull && git checkout develop && git pull && git checkout - && git merge develop
    open = !$HOME/.config/git/scripts/open
    tickets-in-branch = !$HOME/.config/git/scripts/tickets_in_branch
