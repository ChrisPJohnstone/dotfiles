@import "colors.rasi"

configuration {
    location:                       0;
    terminal:                       "kitty";
    show-icons:                     true;
    disable-history:                false;
    click-to-exit: 		            true;
    display-drun: 		            "Launch";
    drun-display-format:            "{icon} {name}";
}

window {
    background-color:               @BG;
    text-color:                     @FG;
    border-color:                   @BDR;
    border:                         2px;
    border-radius:                  0px;
    transparency:                   "real";
    width:                          750px;
    anchor:                         center;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    background-color: 		        @BDR;
    text-color: 		            @BG;
    border-color:                   @BDR;
    border:                         0px;
    border-radius:                  0px;
    enabled: 			            true;
    padding: 			            8px;
}

entry {
    background-color:               @BG;
    text-color:                     @FG;
    border-color:                   @BDR;
    border:                  	    0px;
    border-radius:                  0px;
    placeholder-color:              @FG;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search...";
    blink:                          true;
    padding:                        8px;
}

inputbar {
    background-color:               @BG;
    text-color:                     @FG;
    border-color:                   @BDR;
    border:                  	    0px;
    border-radius:                  0px;
	children: 		                [ prompt, entry ];
    expand:                         false;
    margin:                         0px;
    padding:                        0px;
    position:                       center;
}

listview {
    background-color:               @BG;
    border-color:                   @BDR;
    border:                         0px;
    border-radius:                  0px;
    columns:                        1;
    lines:			                7;
    spacing:                        0px;
    cycle:                          false;
    dynamic:                        true;
    scrollbar:                      false;
    layout:                         vertical;
}

mainbox {
    background-color:               @BG;
    border-color:                   @BDR;
    border:                  	    0px;
    border-radius:                  0px;
    children:                       [ inputbar, listview ];
    spacing:                        5px;
    padding:                        5px;
}

element {
    background-color:               inherit;
    text-color:                     inherit;
    border-color:                   @BDR;
    border:                         0px;
    border-radius:                  0px;
    enabled:                        true;
    spacing:                        10px;
    padding:                        6px;
    cursor:                         pointer;
}

element-icon {
    background-color:               inherit;
    text-color:                     inherit;
    border-color:                   @BDR;
    border:                         0px;
    border-radius:                  0px;
    cursor:                         inherit;
    size:                           30px;
}

element-text {
    background-color:               inherit;
    text-color:                     inherit;
    border-color:                   @BDR;
    border:                         0px;
    border-radius:                  0px;
    cursor:                         inherit;
    vertical-align:                 0.5;
}

element normal normal, urgent, active {
    background-color:               @BG;
    text-color:                     @FG;
}

element alternate normal, urgent, active {
    background-color:               @BG;
    text-color:                     @FG;
}

element selected normal, urgent, active {
    background-color:               @BDR;
    text-color:                     @BG;
}
