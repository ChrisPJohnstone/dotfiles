{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "custom/vpn",
        "disk",
        "memory",
        "cpu",
        "temperature",
        "custom/gpu",
        "pulseaudio"
    ],
    "hyprland/workspaces": {
        "all-outputs": false,
        "warp-on-scroll": false,
        "format": "{name}"
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%Y-%m-%d %H:%M}",
        "on-click": "kitty -e calcurse"
    },
    "tray": {
        "spacing": 5
    },
    "custom/vpn": {
        "exec": "$HOME/.config/waybar/scripts/vpn_status",
        "format": "VPN {}",
        "interval": 1,
        "on-click": "$HOME/.config/hypr/scripts/pia_vpn_util"

    },
    "disk": {
        "format": " {percentage_used}%",
        "path": "/home",
        "tooltip": true,
        "tooltip-format": "{specific_used:0.0f} / {specific_total:0.0f} Gb",
        "unit": "GB",
        "on-click": "nemo"
    },
    "memory": {
        "format": " {}%",
        "tooltip": true,
        "on-click": "kitty -e htop"
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": true,
        "on-click": "kitty -e htop"
    },
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "format": "{icon} {temperatureC}°C",
        "tooltip": true,
        "format-icons": ["", "", ""],
        "on-click": "kitty -e htop"
    },
    "custom/gpu": {
        "exec": "cat /sys/class/hwmon/hwmon1/device/gpu_busy_percent",
        "format": "GPU: {}%",
        "interval": 10,
        "on-click": "kitty -e nvtop"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " ",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    }
}
